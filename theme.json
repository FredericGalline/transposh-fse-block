{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "layout": {
      "contentSize": "1180px",
      "wideSize": "100%"
    },
    "spacing": {
      "customMargin": true,
      "customPadding": true,
      "margin": true,
      "padding": true,
      "blockGap": true,
      "units": ["px", "em", "rem", "%"]
    },
    "border": {
      "customColor": true,
      "customStyle": true,
      "customWidth": true,
      "customRadius": true
    },
    "color": {
      "custom": true,
      "defaultPalette": false,
      "duotone": [],
      "palette": [
        { "slug": "red/dark", "color": "#A62C05" },
        { "slug": "brown/dark", "color": "#8C5737" },
        { "slug": "brown/light", "color": "#F4BB64" },
        { "slug": "yellow/normal", "color": "#FAB53C" },
        { "slug": "yellow/light", "color": "#FBF7EE" },
        { "slug": "light", "color": "#FFFFFF" },
        { "slug": "grey/normal", "color": "#BDBBA2" },
        { "slug": "grey/dark", "color": "#3E3F37" },
        { "slug": "dark", "color": "#000000" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Catorze27 Style 1",
          "slug": "catorze",
          "fontFamily": "catorze, sans-serif",
          "fontFace": [
            {
              "fontFamily": "catorze",
              "fontStyle": "normal",
              "fontWeight": "600",
              "src": [
                "file:./assets/fonts/catorze27style1/Catorze27Style1-SemiBold.woff2"
              ]
            }
          ]
        },
        {
          "name": "Syne",
          "slug": "syne",
          "fontFamily": "syne, sans-serif",
          "fontFace": [
            {
              "fontFamily": "syne",
              "fontStyle": "normal",
              "fontWeight": "200 900",
              "src": ["file:./assets/fonts/syne/Syne-Regular.ttf"]
            }
          ]
        }
      ],
      "fluid": true,
      "fontStyle": "normal",
      "fontWeight": "400",
      "lineHeight": "1.6"
    },
    "blocks": {
      "core/group": {
        "border": {
          "color": true,
          "style": true,
          "width": true,
          "radius": true
        }
      },
      "core/cover": {
        "border": {
          "color": true,
          "style": true,
          "width": true,
          "radius": true
        }
      },
      "core/gallery": {
        "border": {
          "color": true,
          "style": true,
          "width": true,
          "radius": true
        }
      },
      "core/image": {
        "border": {
          "color": true,
          "style": true,
          "width": true,
          "radius": true
        }
      },
      "core/media-text": {
        "border": {
          "color": true,
          "style": true,
          "width": true,
          "radius": true
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--yellow-light)",
      "text": "var(--wp--preset--color--grey-dark)"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--brown-light)",
          "text": "var(--wp--preset--color--grey-dark)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--yellow-normal)",
            "text": "var(--wp--preset--color--grey-dark)"
          }
        },
        ":active": {
          "color": {
            "background": "var(--wp--preset--color--yellow-normal)",
            "text": "var(--wp--preset--color--grey-dark)"
          }
        },
        ":focus": {
          "color": {
            "background": "var(--wp--preset--color--yellow-normal)",
            "text": "var(--wp--preset--color--grey-dark)"
          },
          "outline": {
            "color": "var(--wp--preset--color-dark)",
            "offset": "2px"
          },
          "border": {
            "color": "var(--wp--preset--color-dark)"
          }
        },
        "border": {
          "customWidth": false,
          "customRadius": false,
          "radius": "50px"
        },
        "spacing": {
          "margin": {
            "top": "30px",
            "bottom": "10px"
          },
          "padding": {
            "bottom": "15px",
            "left": "40px",
            "right": "40px",
            "top": "15px"
          }
        },
        "typography": {
          "fontSize": "20px",
          "fontStyle": "normal",
          "fontWeight": "700",
          "textTransform": "uppercase"
        }
      },
      "caption": {
        "color": {
          "text": "var(--wp--preset--color-dark-2)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--body)",
          "fontSize": "0.8rem"
        }
      }
    },
    "blocks": {
      "core/heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--catorze)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "20px"
          },
          "padding": {
            "top": "0px",
            "bottom": "0px"
          }
        }
      },
      "core/paragraph": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "20px"
          }
        }
      },
      "core/cover": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "0px"
          },
          "padding": {
            "top": "100px",
            "bottom": "100px"
          }
        },
        "border": {
          "color": "#000000",
          "style": "solid",
          "width": "0px"
        }
      },
      "core/image": {
        "border": {
          "radius": "30px 30px 10px 10px"
        }
      },
      "core/group": {
        "spacing": {
          "margin": {
            "top": "100px",
            "bottom": "100px"
          },
          "padding": {
            "top": "0px",
            "bottom": "0px"
          }
        },
        "border": {
          "color": "#000000",
          "style": "solid",
          "width": "0px",
          "radius": "0px"
        }
      },
      "core/media-text": {
        "border": {
          "radius": "0px"
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "20px",
          "fontWeight": "500"
        },
        "color": {
          "text": "grey/dark",
          "background": "none"
        }
      },
      "core/navigation-link": {
        "typography": {
          "fontSize": "20px"
        },
        "color": {
          "text": "yellow/normal"
        }
      },
      "core/navigation-submenu": {
        "typography": {
          "fontSize": "20px"
        },
        "spacing": {
          "padding": {
            "top": "10px",
            "bottom": "10px",
            "left": "20px",
            "right": "20px"
          }
        },
        "color": {
          "background": "#4E4E4E",
          "text": "grey/dark"
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer",
      "description": "A custom footer part theme.json",
      "synced": true
    }
  ],
  "customTemplates": [
    {
      "name": "page-artiste",
      "postTypes": ["artist"],
      "title": "Page d'artiste"
    }
  ]
}
